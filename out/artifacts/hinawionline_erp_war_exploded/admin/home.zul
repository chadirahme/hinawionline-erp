                <label value="Tasks" style="color:blue;text-decoration:underline;cursor: hand;" onClick='@command("menuClicked", pagename="todolist.zul")'/>
                </a>
                                   
       		  </vlayout>
       		  </groupbox>
       		  
                 </vlayout>
                 
